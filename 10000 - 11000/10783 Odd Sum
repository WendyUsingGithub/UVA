#include <iostream>
#include <math.h>
#include <iomanip>
#include <vector>
using namespace std;

int main() {
    int t;
    int a;
    int b;
    int n;
    int count = 1;
    int sum = 0;

    cin >> t;

    for(int i=0; i<t; i++) {
        cin >> a;
        cin >> b;
        sum = 0;
        
        if(a%2==0) a++;
        if(b%2==0) b--;
        n = (b - a) / 2 + 1;
        sum = (a + b) * n / 2;
        cout << "Case ";
        cout << count << ": ";
        cout << sum << endl;
        count++;
    }

    return 0;
}


